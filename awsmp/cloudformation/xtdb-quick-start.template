Conditions:
  KeyPairPresent: !Not [ !Equals [ !Ref KeyPairName, "" ] ]
Resources:
  S3Policy:
    Type: AWS::IAM::ManagedPolicy
    Properties:
      Description: Policy for XTDB to access S3 bucket
      PolicyDocument:
        Version: '2012-10-17'
        Statement:
          - Effect: Allow
            Action:
              - s3:GetObject
              - s3:PutObject
              - s3:DeleteObject
              - s3:ListBucket
              - s3:AbortMultipartUpload
              - s3:ListBucketMultipartUploads
            Resource:
              - !Sub 'arn:aws:s3:::${S3BucketName}'
              - !Sub 'arn:aws:s3:::${S3BucketName}/*'
  EksStack:
    Type: AWS::CloudFormation::Stack
    Properties:
      TemplateURL: https://s3.amazonaws.com/awsmp-fulfillment-cf-templates-prod/clustercreater.template
      Parameters:
        KeyPairName: !If [ KeyPairPresent, !Ref KeyPairName, !Ref "AWS::NoValue"]
        EKSClusterName: !Ref EKSClusterName
        NodeInstanceType: !Ref NodeInstanceType
        NumberOfNodes: !Ref NumberOfNodes
        MaxNumberOfNodes: !Ref MaxNumberOfNodes
        NodeVolumeSize: !Ref NodeVolumeSize
        ClusterAutoScaler: !Ref ClusterAutoScaler
  XtdbHelmStack:
    Type: AWS::CloudFormation::Stack
    Properties:
      TemplateURL: https://s3.amazonaws.com/awsmp-fulfillment-cf-templates-prod/helm.template
      Parameters:
        ClusterName: !Ref EKSClusterName
        Chart: oci://709825985650.dkr.ecr.us-east-1.amazonaws.com/juxt/xtdb-helm:2.0.0-SNAPSHOTg
        Namespace: !Ref Namespace
        Name: !Ref ReleaseName
        ValueYaml: !Sub |
          xtdbConfig:
            s3Bucket: ${S3BucketName}
            serviceAccount: ${ServiceAccountName}
    DependsOn:
      - EksStack
      - ServiceAccountStack
  ServiceAccountStack:
    Type: AWS::CloudFormation::Stack
    Properties:
      TemplateURL: https://s3.amazonaws.com/awsmp-fulfillment-cf-templates-prod/serviceaccount.template
      Parameters:
        ClusterName: !Ref EKSClusterName
        Namespace: !Ref Namespace
        ServiceAccountName: !Ref ServiceAccountName
        PolicyArns:
          !Join
            - ","
            - - arn:aws:iam::aws:policy/AWSMarketplaceMeteringFullAccess
              - arn:aws:iam::aws:policy/AWSMarketplaceMeteringRegisterUsage
              - arn:aws:iam::aws:policy/service-role/AWSLicenseManagerConsumptionPolicy
              - !Ref S3Policy
        OIDCUrl:
          Fn::GetAtt:
            - EksStack
            - Outputs.OIDCIssuerURL
    DependsOn: EksStack
